{
  "game_name": "PacMan",
  "version": "0.0.1",
  "url": "https://github.com/Jesse-Jumbo/pac-man_game",
  "description": "小精靈也叫吃豆人，還原一款經典 Pac-Man Game 的簡單版本\n利用方向鍵盤讓玩家操作Pac-Man，躲避小精靈並順利獲得所有dots過關",
  "logo": [
    "./asset/image/PacMan.svg",
    "https://raw.githubusercontent.com/Jesse-Jumbo/pac-man_game/main/asset/image/PacMan.svg"
  ],
  "user_num": {
    "min": 1,
    "max": 1
  },
  "game_params": [
    {
      "name": "game_mode",
      "verbose": "遊戲模式",
      "type": "str",
      "choices": [
        {
          "verbose": "SINGLE",
          "value": "SINGLE"
        }
      ],
      "help": "choose the type of game",
      "default": "SINGLE"
    },
    {
      "name": "map_no",
      "verbose": "地圖編號",
      "type": "int",
      "max": 20,
      "min": 1,
      "default": 5,
      "help": "set map number for load game scene"
    },
    {
      "name": "frame_limit",
      "verbose": "遊戲總幀數(Frame)",
      "type": "int",
      "max": 3000,
      "min": 30,
      "default": 450,
      "help": "set the time number of your game level"
    },
    {
      "name": "sound",
      "verbose": "遊戲音效",
      "type": "str",
      "choices": [
        "on",
        "off"
      ],
      "help": "'off' can turn off the sound.",
      "default": "off"
    }
  ]
}
