{
  "game_name": "PacMan",
  "version": "1.0.0",
  "url": "https://github.com/Jesse-Jumbo/pac-man_game",
  "game_params": [
    {
      "name": "user_num",
      "verbose": "參賽人數",
      "type": "int",
      "max": 4,
      "min": 1,
      "default": 1,
      "help": "set the number of user."
    },
    {
      "name": "game_mode",
      "verbose": "遊戲模式",
      "type": "str",
      "choices": [
        {
          "verbose": "NORMAL",
          "value": "NORMAL"
        },
        {
          "verbose": "RELIVE",
          "value": "RELIVE"
        }
      ],
      "help": "choose the type of game",
      "default": "NORMAL"
    },
    {
      "name": "map_no",
      "verbose": "地圖編號",
      "type": "int",
      "max": 11,
      "min": 1,
      "default": 11,
      "help": "set map number for load game scene"
    },
    {
      "name": "sound",
      "verbose": "遊戲音效",
      "type": "str",
      "choices": [
        "on",
        "off"
      ],
      "help": "'on' can turn on the sound.",
      "default": "off"
    }
  ]
}
